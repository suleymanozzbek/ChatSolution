@model WebApp.Models.AddUserModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>

    <title>Login</title>
</head>
<body>
    <br /><br /><br />
    <div class="form-horizontal">
        @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <fieldset>


                <div class="form-group">
                    <div class="col-md-4 control-label">
                        Username:
                    </div>
                    <div class="col-lg-4">
                        @Html.TextBoxFor(x => x.username, new { @class = "form-control input-md", @placeholder = "Username" })

                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-4 control-label">
                        Şifre
                    </div>
                    <div class="col-lg-4">
                        @Html.PasswordFor(x => x.password, new { @class = "form-control input-md", @placeholder = "Password" })

                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-4">

                    </div>
                    <div class="col-lg-4">
                        <input type="submit" value="Giriş" class="btn btn-success btn-block" />
                    </div>
                    <div class="col-lg-4">

                    </div>
                </div>
            </fieldset>
        }
    </div>
</body>
</html>
